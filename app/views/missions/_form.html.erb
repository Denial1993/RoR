<%= form_for(mission) do |f| %>
  <%= f.label :name , "任務名稱" %>
  <%= f.text_field :name %><br/>

  <%= f.label :description , "任務內容" %>
  <%= f.text_area :description %><br/>


  <%= f.label :end , "結束時間" %>
  <%= f.datetime_field :end %><br/>

  <%= f.label :sequence , "優先順序" %>
  <%= f.text_field :sequence %><br/>

  <%= f.label :status , "狀態" %>
  <%= f.text_field :status %><br/>

  <%= f.submit %>
<% end %>

<!--這個技巧在 Rails 稱之局部渲染（Partial Render）-->